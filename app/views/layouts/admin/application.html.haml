!!!
%html
  %head
    %title
      Better and Nice Produce Corp

    -# Meta information
    %meta{charset: "utf-8"}/
    %meta{content: "text/html;charset=utf-8", "http-equiv": "content-type"}/
    %meta{content: "IE=edge", "http-equiv": "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui", name: "viewport"}/
    %meta{content: "NOINDEX, NOFOLLOW", name: "ROBOTS"}/
    -# End Meta information

    -# Favicon settings
    = favicon_link_tag asset_path("img/favicon.png"), rel: "icon", type: "image/png"
    %meta{content: "#fef7f8", name: "theme-color"}/
    -# End Favicon settings

    -# OpenGraph info
    -# End OpenGraph info

    -# CSRF Tags
    = csrf_meta_tags
    -# End CSRF Tags

    -# CSP Tags
    = csp_meta_tag
    -# End CSP Tags

    -# Application assets
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload"
    = stylesheet_link_tag "admin", media: "all", "data-turbolinks-track": "reload"
    = javascript_include_tag "application", "data-turbolinks-track": "reload"
    =# javascript_include_tag "https://www.gstatic.com/charts/loader.js", "data-turbolinks-track": "reload"
    -# End Application assets

    -# Render sync config
    = include_sync_config
    -# End Render sync config

  %body{"data-locale": "#{I18n.locale}"}
    -# Render header
    = render "layouts/admin/header"
    -# End Render header

    -# Fix body (affix)
    .fix-body
    -# End Fix body (affix)

    -# Render alerts
    = render "layouts/admin/alerts"
    -# End Render alerts

    -# Preloader
    .preloader
      .spinner
        .bounce1
        .bounce2
        .bounce3
    -# End Preloader

    -# Main content
    = yield
    -# End Main content

    -# Render footer
    = render "layouts/admin/footer"
    -# End Render footer

    -# Material input script
    = javascript_include_tag "material-input", "data-turbolinks-track": "reload"
    -# End Material input script

    -# Form script
    = javascript_include_tag "form", "data-turbolinks-track": "reload"
    -# End Form script

    -# Barcode script
    = javascript_include_tag "barcode", "data-turbolinks-track": "reload"
    -# End Barcode script
