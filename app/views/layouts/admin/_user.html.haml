.user-container
  .dropdown
    %a.custom-btn.dropdown-toggle{"data-toggle": "dropdown", href: "#"}
      %i.fas.fa-user

    %ul.dropdown-menu
      %li
        -# Employee detail Sync
        = sync partial: "employee_info", resource: current_employee
        = sync_new partial: "details", resource: Employee.new
        -# End Employee detail Sync
        
      %li
        %a{href: "#"}
          %i.fas.fa-cog
          %span= t("header.user.configuration")

      %li
        %a{href: "#"}
          %i.fas.fa-lock
          %span= t("header.user.lock")

      %li
        = link_to (admin_sign_out_path), method: :delete do
          %i.fas.fa-sign-out-alt
          %span= t("header.user.sign_off")
