!!!
%html
  %head
    %title
      Better and Nice Produce Corp - #{yield(:title)}

    -# Meta information
    %meta{charset: "utf-8"}/
    %meta{content: "text/html;charset=utf-8", "http-equiv": "content-type"}/
    %meta{content: "IE=edge", "http-equiv": "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui", name: "viewport"}/
    -# End Meta information

    -# Favicon settings
    = favicon_link_tag asset_path("img/favicon.png"), rel: "icon", type: "image/png"
    %meta{content: "#fef7f8", name: "theme-color"}/
    -# End Favicon settings

    -# OpenGraph info
    -# End OpenGraph info

    -# CSRF Tags
    = csrf_meta_tags
    -# End CSRF Tags

    -# CSP Tags
    = csp_meta_tag
    -# End CSP Tags

    -# Application assets
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload"
    = stylesheet_link_tag "ecommerce", media: "all", "data-turbolinks-track": "reload"
    = javascript_include_tag "application", "data-turbolinks-track": "reload"
    -# End Application assets

    -# Render sync config
    = include_sync_config
    -# End Render sync config

    -# Stripe V3 script
    = javascript_include_tag "https://js.stripe.com/v3/", "data-turbolinks-track": "reload"
    -# End Stripe V3 script

  %body{"data-locale": "#{I18n.locale}"}

    -# Render header
    = render "layouts/header_ecommerce"
    -# End Render header

    -# Render alerts
    = render "layouts/alerts"
    -# End Render alerts

    -# Preloader
    .preloader
      .spinner
        .bounce1
        .bounce2
        .bounce3
    -# End Preloader

    -# Main content
    = yield
    -# End Main content

    -# Render footer
    = render "layouts/footer_ecommerce"
    -# End Render footer

    %a#stripe-receipt{href: "#", target: "_blank"}
      %span TEST

    %input{type: "hidden", id: "currentCustomer", value: "#{current_customer ? Base64.encode64(current_customer.id.to_s) : Base64.encode64("0")}"}

    -# TouchSwipe script
    = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/jquery.touchswipe/1.6.4/jquery.touchSwipe.min.js", "data-turbolinks-track": "reload"
    -# End TouchSwipe script

    -# Material input script
    = javascript_include_tag "material-input", "data-turbolinks-track": "reload"
    -# End Material input script

    -# Add to Cart script
    = javascript_include_tag "cart", "data-turbolinks-track": "reload"
    -# End Add to Cart script

    -# E-commerce scripts
    = javascript_include_tag "ecommerce", "data-turbolinks-track": "reload"
    -# End E-commerce scripts

    -# Barcode script
    = javascript_include_tag "barcode", "data-turbolinks-track": "reload"
    -# End Barcode script

    -# Form script
    = javascript_include_tag "form", "data-turbolinks-track": "reload"
    -# End Form script
