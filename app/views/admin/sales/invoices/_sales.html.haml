.row.no-margin
  .col-xs-12.no-padding
    -# Table
    %table.table
      %thead
        - model = "sale"
        - attributes = ["sale_datetime", "total_sale", "customer", "employee", "paid", "payment_method", "delivery_status"]

        -# Render table header
        = render partial: "partials/table_header", locals: {model: model, attributes: attributes}

      %tbody
        -# Data table render_sync
        = sync partial: "invoices/data_table", collection: @invoices
        = sync_new partial: "invoices/data_table", resource: Sale.new
        -# End Data table render_sync
    -# End Table


.row.no-margin
  .col-xs-12.no-padding.text-center
    -# Pagination
    = will_paginate @invoices, renderer: BootstrapPagination::Rails
    -# End Pagination
