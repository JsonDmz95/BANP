-# Form Title
%section.form-title
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-sm-4.col-lg-8
        -# Heading
        %h1{class: "#{@return.state}"}
          %i.fas.fa-undo-alt
          = t("sale.return")
        -# End Heading

      .col-xs-12.col-sm-8.col-lg-4
        -# Provider button
        .btn-container
          = link_to (admin_sale_details_path(@return.id)), class: "btn btn-general" do
            %i.fas.fa-id-card
            - if @is_delivery
              %span= t("sale.delivery")

            - else
              %span= t("sale.invoice")
        -# End Provider button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              - if @is_delivery
                = link_to (admin_sale_deliveries_path) do
                  %i.far.fa-newspaper
                  %span= t("sale.deliveries")

              - else
                = link_to (admin_sale_invoices_path) do
                  %i.far.fa-newspaper
                  %span= t("sale.invoices")
            %li
              = link_to (admin_sale_details_path(@return.id)) do
                %i.fas.fa-list-alt
                - if @is_delivery
                  = "#{t('sale.delivery_details')} ##{@return.id}"

                - else
                  = "#{t('sale.invoice_details')} ##{@return.id}"
            %li.active
              %i.fas.fa-undo-alt
              = t("sale.return")

    -# End Breadcrumb
-# End Form Title

-# Render form
= render "admin/sales/returns/form"
-# End Render form
