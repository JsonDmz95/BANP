.row.no-margin
  .col-xs-12.no-padding
    -# Table
    %table.table
      %thead
        - model = "provider"
        - attributes = ["name", "FEIN", "email" ,"phone"]

        -# Render table header
        = render partial: "partials/table_header", locals: {model: model, attributes: attributes}

      %tbody
        -# Data table render_sync
        = sync partial: "data_table", collection: @providers
        = sync_new partial: "data_table", resource: Provider.new
        -# End Data table render_sync
    -# End Table


.row.no-margin
  .col-xs-12.no-padding.text-center
    -# Pagination
    = will_paginate @providers, renderer: BootstrapPagination::Rails
    -# End Pagination
