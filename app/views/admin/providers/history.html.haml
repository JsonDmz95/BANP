-# History
%section.history
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-lg-10
        -# Heading
        %h1.false
          %i.fas.fa-history
          = t("views.history.history")
        -# End Heading

      .col-xs-12.col-lg-2
        -# Provider button
        .btn-container
          = link_to (admin_provider_path(@provider)), class: "btn btn-general" do
            %i.fas.fa-id-card
            %span= t("activerecord.models.provider")
        -# End Provider button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_providers_path) do
                %i.fas.fa-list-alt
                %span= t("header.navigation.providers")
            %li
              = link_to (admin_provider_path(@provider)) do
                %i.fas.fa-id-card
                %span
                  = @provider.name
            %li.active
              %i.fas.fa-history
              = t("views.history.history")
    -# End Breadcrumb

    -# Render timeline
    = render "admin/partials/timeline"
    -# End Render timeline
-# End History
