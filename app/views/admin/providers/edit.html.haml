-# Form Title
%section.form-title
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-sm-4.col-lg-8
        -# Heading
        %h1{class: "#{@provider.state}"}
          %i.fas.fa-edit
          = t("views.edit.edit")
        -# End Heading

      .col-xs-12.col-sm-8.col-lg-4
        -# Provider button
        .btn-container
          = link_to (admin_provider_path(@provider)), class: "btn btn-general" do
            %i.fas.fa-id-card
            %span= t("activerecord.models.provider")
        -# End Provider button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_providers_path) do
                %i.fas.fa-list-alt
                %span= t("header.navigation.providers")
            %li
              = link_to (admin_provider_path(@provider)) do
                %i.fas.fa-id-card
                %span
                  = @provider.name
            %li.active
              %i.fas.fa-edit
              = t("views.edit.edit")
    -# End Breadcrumb
-# End Form Title

-# Render form
= render "form"
-# End Render form
