<section class="message">
  <div class="container">
    <!-- Information -->
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <!-- Material card -->
        <div class="material-card shadow-card true">
          <div class="row no-margin">
            <!-- Messages -->
            <% if flash.any? %>

            <div class="col-xs-12 no-padding">
              <% if !flash[:alert].blank? %>
              <h1 class="flash-alert"><span><i class="fas fa-exclamation-triangle"></i></span> <span><%= flash[:alert] %></span></h1>
              <% end %>

              <% if !flash[:notice].blank? %>
              <h1 class="flash-notice"><span><i class="fas fa-info-circle"></i></span> <span><%= flash[:notice] %></span></h1>
              <% end %>
            </div>

            <% end %>
            <!-- End Messages -->

            <div class="col-xs-12 no-padding redirect-container">
              <% if @source == "not-found" %>
              <p><%= link_to admin_root_path, title: "t('views.errors.back_to_home')" do %><i class="fas fa-undo-alt"></i> <span><%= t("views.errors.back_to_home") %></span><% end %></p>

              <% elsif @source == "confirmation" %>
              <p><%= link_to admin_confirm_account_path, title: "t('views.authentication.resend_instructions')" do %><i class="fas fa-envelope"></i> <span><%= t("views.authentication.resend_instructions") %></span><% end %></p>

              <% elsif @source == "unlock" %>
              <p><%= link_to admin_unlock_account_path, title: "t('views.authentication.resend_instructions')" do %><i class="fas fa-envelope"></i> <span><%= t("views.authentication.resend_instructions") %></span><% end %></p>

              <% elsif @source == "reset-password" %>
              <p><%= link_to admin_reset_password_path, title: "t('views.authentication.resend_instructions')" do %><i class="fas fa-envelope"></i> <span><%= t("views.authentication.resend_instructions") %></span><% end %></p>
              <% end %>
            </div>
          </div>
        </div>
        <!-- End Material card -->
      </div>
    </div>
    <!-- End Information -->
  </div>
</section>
