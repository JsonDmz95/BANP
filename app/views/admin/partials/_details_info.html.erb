<div class="col-xs-4">
  <!-- Material card -->
  <div class="material-card material-card-pdf shadow-card shadow-card-pdf <%= resource.state %>">
    <!-- General information -->
    <div class="row no-margin">
      <div class="col-xs-12 no-padding">
        <div class="general-info">
          <!-- Image -->
          <div class="image-container">
            <% if resource.image.attached? %>
            <%= image_tag url_for(resource.image), class: "img-responsive" %>
            <% else %>
            <%= image_tag url_for("https://s3.amazonaws.com/betterandnice/images/default/default.png"), class: "img-responsive" %>
            <% end %>
          </div>
          <!-- End Image -->
        </div>
      </div>
    </div>
    <!-- End General information -->
  </div>
  <!-- End Material card -->
</div>

<div class="col-xs-8">
  <!-- Material card -->
  <div class="material-card material-card-pdf shadow-card shadow-card-pdf <%= resource.state %>">
    <div class="row no-margin">
      <div class="col-xs-12 no-padding">
        <div class="detail-info <%= resource.state %>">
          <% attributes.each do |attribute| %>

          <div class="info">
            <p class="title"><b><%= t("activerecord.attributes.#{resource}.#{attribute}") %></b></p>

            <% if attribute == "state" %>
            <p><%= resource["#{attribute}"] ? t("views.show.enabled") : t("views.show.disabled") %></p>

            <% else %>
            <p><%= resource["#{attribute}"] %></p>
            <% end %>
          </div>

          <% end %>

          <% user_attributes = ["confirmed", "sign_in_count", "current_sign_in_at", "current_sign_in_ip", "last_sign_in_at", "last_sign_in_ip"] %>

          <% if resource.user.present? %>
          <% user_attributes.each do |attribute| %>

          <div class="info">
            <p class="title"><b><%= t("activerecord.attributes.user.#{attribute}") %></b></p>

            <% if attribute == "confirmed" %>
            <p><%= resource.user["#{attribute}"] ? t("views.show.confirmed") : t("views.show.not_confirmed") %></p>

            <% elsif attribute == "current_sign_in_at" || attribute == "last_sign_in_at"  %>
            <p><%= format_datetime(resource.user["#{attribute}"]) %></p>

            <% else %>
            <p><%= resource.user["#{attribute}"] %></p>
            <% end %>
          </div>

          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- End Material card -->
</div>
