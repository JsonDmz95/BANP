.row.no-margin
  .col-xs-12.no-padding
    -# Table
    %table.table
      %thead
        - model = "customer"
        - attributes = ["first_name", "last_name", "company", "email" ,"phone", "select"]

        -# Render table header
        = render partial: "partials/table_header", locals: {model: model, attributes: attributes}
      %tbody
        -# Data table render_sync
        = sync partial: "select_customer", collection: @customers
        = sync_new partial: "select_customer", resource: Customer.new
        -# End Data table render_sync
    -# End Table

.row.no-margin
  .col-xs-12.no-padding.text-center
    -# Pagination
    = will_paginate @customers, renderer: BootstrapPagination::Rails, param_name: "customers_page"
    -# End Pagination

-# Auto search script
= javascript_include_tag "auto-search", "data-turbolinks-track": "reload"
-# End Auto search script

-# Pagination with Ajax script
= javascript_include_tag "pagination-ajax", "data-turbolinks-track": "reload"
-# End Pagination with Ajax script

-# Select customer
= javascript_include_tag "select-customer", "data-turbolinks-track": "reload"
-# End Select customer
