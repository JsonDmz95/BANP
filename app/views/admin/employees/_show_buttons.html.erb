  <% if @show_all %>

  <!-- Enabled button -->
  <%= button_to admin_employees_path, method: "get", remote: true, params: {}, class: "btn btn-general" do %><i class="fa fa-list-ul" aria-hidden="true"></i> <span><%= t("views.index.show_enabled") %></span><% end %>
  <!-- End Enabled button -->

  <% else %>

  <!-- All button -->
  <%= button_to admin_employees_path, method: "get", remote: true, params: { show: "all" }, class: "btn btn-general btn-danger" do %><i class="fa fa-list-alt" aria-hidden="true"></i> <span><%= t("views.index.show_all") %></span><% end %>
  <!-- End All button -->
  
  <% end %>
