<!-- Index -->
<section class="index">
  <div class="container">
    <!-- Title -->
    <div class="row title-container">
      <div class="col-xs-12 col-lg-10">
        <!-- Heading -->
        <h1><i class="fas fa-list-alt"></i> <%= t('header.navigation.employees') %></h1>
        <!-- End Heading -->
      </div>
      <div class="col-xs-12 col-lg-2">
        <!-- New button-->
        <div class="btn-new-container">
          <%= link_to (admin_new_employee_path), class: "btn btn-general" do %><i class="fas fa-plus"></i> <span><%= t('views.index.new') %></span><% end %>
        </div>
        <!-- End New button-->
      </div>
    </div>
    <!-- End Title -->

    <!-- Breadcrumb -->
    <div class="row">
      <div class="col-xs-12 hidden-xs">
        <div class="breadcrumb-container">
          <ol class="breadcrumb">
            <li>
              <%= link_to (admin_root_path) do %><i class="fas fa-tachometer-alt"></i> <span><%= t('header.navigation.dashboard') %></span><% end %>
            </li>

            <li class="active">
              <i class="fas fa-list-alt"></i> <%= t('header.navigation.providers') %>
            </li>
          </ol>
        </div>
      </div>
    </div>
    <!-- End Breadcrumb -->

    <!-- Information -->
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        <!-- Material card -->
        <div class="material-card shadow-card">
          <div class="row no-margin">
            <!-- Search record -->
            <div class="col-xs-12 col-md-6 no-padding">
              <div id="search-record" class="search-record">
                <!-- Form -->
                <%= form_tag admin_employees_path, method: 'get', id: "employees_search", autocomplete:"off" do %>
                <div class="input-group">
                  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: t('views.index.search') %>
                  <div class="border-bottom"></div>

                  <span class="input-group-btn">
                    <%= button_tag t('elements.search'), class: "btn btn-general btn-warning", data: {disable_with: "<i class='fas fa-spinner fa-spin'></i>"} do %><i class="fas fa-search"></i><% end %>
                  </span>
                </div>
                <% end %>
                <!-- End Form -->
              </div>
            </div>
            <!-- End Search record -->

            <!-- Show all -->
            <div class="col-xs-12 col-md-6 no-padding">
              <div class="show-buttons">
                <div class="btn-container">
                  <% if @show_all %>
                  <!-- Enabled button -->
                  <%= button_to admin_employees_path, method: :get, params: {}, class: "btn btn-general btn-success" do %><i class="fa fa-list-ul" aria-hidden="true"></i> <span><%= t('views.index.show_enabled') %></span><% end %>
                  <!-- End Enabled button -->
                  <% else %>
                  <!-- All button -->
                  <%= button_to admin_employees_path, method: :get, params: { show: "all" }, class: "btn btn-general btn-danger" do %><i class="fa fa-list-alt" aria-hidden="true"></i> <span><%= t('views.index.show_all') %></span><% end %>
                  <!-- End All button -->
                  <% end %>
                </div>

                <!-- Export button-->
                <div class="btn-container">
                  <%= link_to (admin_employees_path(format: "pdf", lang: I18n.locale)), target: "_blank", class: "btn btn-general btn-default" do %><i class="fas fa-download"></i> <span><%= t('views.index.export') %></span><% end %>
                </div>
                <!-- End Export button-->
              </div>
            </div>
            <!-- End Show all -->
          </div>

          <!-- Table -->
          <div class="row no-margin">
            <div class="col-xs-12 no-padding" id="employees">
              <!-- Render Table -->
              <!-- <= render 'table' > -->
              <!-- End Render Table -->

              <table class="table">
                <thead>
                  <tr>
                    <th>No.</th>
                    <th><%= t('activerecord.attributes.employee.first_name') %></th>
                    <th><%= t('activerecord.attributes.employee.last_name') %></th>
                    <th><%= t('activerecord.attributes.employee.email') %></th>
                    <th><%= t('activerecord.attributes.employee.phone') %></th>
                    <th><%= t('activerecord.attributes.employee.role') %></th>
                  </tr>
                </thead>

                <tbody>
                  <!-- Categories data table Sync -->
                  <%= sync partial: "data_table", collection: @employees %>
                  <%= sync_new partial: "data_table", resource: Employee.new %>
                  <!-- End Categories data table Sync -->
                </tbody>
              </table>
            </div>
          </div>
          <!-- End Table -->

          <!-- Pagination -->
          <div class="row no-margin">
            <div class="col-xs-12 no-padding">
              <!-- Will Paginate -->
              <%= will_paginate @employees, renderer: BootstrapPagination::Rails %>
              <!-- End Will Paginate -->
            </div>
          </div>
          <!-- End Pagination -->
        </div>
        <!-- End Material card -->
      </div>
    </div>
    <!-- End Information -->
  </div>
</section>
<!-- End Index -->

<!-- Clickable row -->
<%= javascript_include_tag 'clickable-row', 'data-turbolinks-track': 'reload' %>
<!-- End Clickable row -->
