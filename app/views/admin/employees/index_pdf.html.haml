-# Index PDF
%section.index.index-pdf
  .container
    .row
      .col-xs-12
        -# Material card
        .material-card.shadow-card.material-card-pdf.shadow-card-pd
          .row.no-margin
            .col-xs-12.no-padding
              %h1.text-center= pdf_title
              -# Table
              %table.table.table-pdf
                -# Set attributes
                - model = "employee"
                - attributes = ["first_name", "last_name", "email" ,"phone", "role"]

                -# Render table header
                = render partial: "admin/partials/table_header", locals: {model: model, attributes: attributes}
                %tbody
                  - resource.each do |info|
                    -# Render table information
                    = render partial: "admin/partials/table_information", locals: {resource: info, attributes: attributes}
              -# End Table
        -# End Material card
-# End Index PDF
