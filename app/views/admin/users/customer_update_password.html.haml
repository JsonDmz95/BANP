-# Form title
%section.form-title
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-lg-10
        -# Heading
        %h1
          %i.fas.fa-key
          = t("views.edit.update_password")
        -# End Heading

      .col-xs-12.col-lg-2
        -# Customers button
        .btn-container
          = link_to (admin_customer_path(@customer)), class: "btn btn-general" do
            %i.fas.fa-id-card
            %span= t("activerecord.models.customer")
        -# End Customers button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path), "data-toggle": "tooltip", "data-placement": "bottom", title: t("header.navigation.dashboard") do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_customers_path), "data-toggle": "tooltip", "data-placement": "bottom", title: t("header.navigation.customers") do
                %i.fas.fa-list-alt
                %span= t("header.navigation.customers")
            %li
              = link_to (admin_customer_path(@customer)) do
                %i.fas.fa-id-card
                %span
                  = @customer.first_name
                  = @customer.last_name
            %li.active
              %i.fas.fa-key
              = t("views.edit.update_password")
    -# End Breadcrumb
-# End Form title

-# Render Form
= render "form"
-# End Render Form
