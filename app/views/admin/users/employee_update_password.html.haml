/ Form Title
%section.form-title
  .container
    / Title
    .row.title-container
      .col-xs-12.col-lg-10
        / Heading
        %h1.false
          %i.fas.fa-key
          = t("views.edit.update_password")
        / End Heading
      .col-xs-12.col-lg-2
        / Employee button
        .btn-container
          = link_to (admin_employee_path(@employee)), class: "btn btn-general" do
            %i.fas.fa-id-card
            %span= t("activerecord.models.employee")
        / End Employee button
    / End Title
    / Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_employees_path) do
                %i.fas.fa-list-alt
                %span= t("header.navigation.employees")
            %li
              = link_to (admin_employee_path(@employee)) do
                %i.fas.fa-id-card
                %span
                  = @employee.first_name
                  = @employee.last_name
            %li
              = link_to (admin_edit_employee_path(@employee)) do
                %i.fas.fa-edit
                %span= t("views.show.edit")
            %li.active
              %i.fas.fa-key
              = t("views.edit.update_password")
    / End Breadcrumb
/ End Form Title
/ Form
= render "form"
/ End Form
