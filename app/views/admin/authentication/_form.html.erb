<!-- Form -->
<%= form_for :login, url: admin_login_path, html: {class: "login-form", autocomplete: "on"} do |f| %>

<section class="form">
  <div class="container">
    <!-- Information -->
    <div class="row">

      <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
        <!-- Material card -->
        <div class="material-card shadow-card true">
          <div class="row no-margin">
            <div class="col-xs-12 no-padding">
              <div class="form-info">

                <div class="form-group">
                  <label><b><%= t('activerecord.attributes.employee.email') %></b></label>
                  <%= f.text_field :email, class: "form-control input", placeholder: t('activerecord.attributes.employee.email'), required: true %>
                </div>

                <div class="form-group">
                  <label><b><%= t('activerecord.attributes.employee.password_digest') %></b></label>
                  <%= f.password_field :password, class: "form-control input", placeholder: t('activerecord.attributes.employee.password_digest'), required: true %>
                </div>

                <div class="main-buttons">
                  <div class="col-xs-12 col-sm-12 button-container no-padding">

                      <%= link_to (admin_reset_password_path), class: "btn btn-general" do %><i class="fas fa-fingerprint"></i> <span><%= t('views.login.forgot_password') %></span><% end %>

                    <%= f.button class: "btn btn-general btn-success", data: {disable_with: "<i class='fas fa-spinner fa-spin'></i>"} do %><i class="fas fa-sign-in-alt"></i> <span><%= t('views.form.login') %></span> <% end %>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
        <!-- End Material card -->
      </div>

    </div>
    <!-- End Information -->
  </div>
</section>

<% end %>
<!-- End Form -->
