<!-- 1 Column Text + Button : BEGIN -->
<tr>
  <td style="background-color: #fef7f8;">
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
      <tr>
        <td style="padding: 20px; font-family: sans-serif; font-size: 16px; line-height: 20px; color: #555555;">

          <h1 style="margin: 0 0 30px; font-size: 26px; line-height: 30px; color: #333333; font-weight: bold; text-align:center;">Better and Nice Produce Corp</h1>

          <p style="margin: 0 0 15px; color: #333333; text-align:center;"><%= "#{I18n.t('views.mailer.greetings')} #{@user.employee.first_name} #{@user.employee.last_name}"%></p>

          <p style="margin: 0 0 10px; color: #333333; text-align:center;"><%= I18n.t("views.mailer.password_updated") %></p>

          <p style="margin: 0 0 10px; color: #333333; text-align:center;"><%= I18n.t("views.mailer.password_updated_button_link") %></p>
        </td>
      </tr>

      <tr>
        <td style="padding: 0 20px 20px;">
          <!-- Button : BEGIN -->
          <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: auto;">
            <tr>
              <td class="button-td button-td-primary" style="background: #fef7f8; text-align: center;">
                <%= link_to I18n.t("views.authentication.resend"), admin_reset_password_url(email: @user.email), class: "button-a button-a-primary", target: "_blank", title: "#{I18n.t('views.authentication.resend')}", style: "background: #f15f79; font-family: sans-serif; font-size: 16px; line-height: 15px; text-decoration: none; padding: 13px 17px; color: #ffffff; display: inline-block;" %>

                <p style="margin: 30px 0 10px; text-align:center;"></p>

                <%= link_to "#{admin_reset_password_url(email: @user.email)}", admin_reset_password_url(email: @user.email), target: "_blank", title: "#{I18n.t('views.authentication.resend')}", style: "font-family: sans-serif; font-size: 14px; line-height: 15px; text-decoration: underline; color: #b24592; display: inline-block;" %>
              </td>
            </tr>
          </table>
          <!-- Button : END -->
        </td>
      </tr>

      <tr>
        <td style="padding: 20px; font-family: sans-serif; font-size: 12px; line-height: 20px; color: #555555;">
          <p style="margin: 0 0 10px; color: #888888; text-align:center;"><%= I18n.t("views.mailer.requested_info", ip: @ip, location: @location) %></p>
        </td>
      </tr>
    </table>
  </td>
</tr>
<!-- 1 Column Text + Button : END -->
