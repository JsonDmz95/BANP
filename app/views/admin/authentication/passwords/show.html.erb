<!-- Form -->
<%= form_for @employee, url: admin_update_password_path, html: {class: "", autocomplete: "off"} do |f| %>
<section class="form">
  <div class="container">
    <!-- Information -->
    <div class="row">
      <!-- Show errors -->
      <%= render partial: "admin/partials/form_errors", locals: {resource: @employee, model: Employee} %>
      <!-- End Show errors -->

      <div class="col-xs-12 col-md-7 col-lg-8">
        <!-- Material card -->
        <div class="material-card shadow-card <%= @employee.state %>">
          <!-- Table -->
          <div class="row no-margin">
            <div class="col-xs-12 no-padding">
              <div class="form-info">

                <!-- Only for new records -->
                  <!--  < if action_name == "new" || action_name == "create" > -->

                <div class="form-group">
                  <%= f.password_field :password, class: "form-control input", placeholder: t("activerecord.attributes.employee.password"), required: true %>
                  <label><b><%= t("activerecord.attributes.employee.password") %></b></label>
                  <div class="border-bottom"></div>
                </div>

                <div class="form-group">
                  <%= f.password_field :password_confirmation, class: "form-control input", placeholder: t("activerecord.attributes.employee.password_confirmation"), required: true %>
                  <label><b><%= t("activerecord.attributes.employee.password_confirmation") %></b></label>
                  <div class="border-bottom"></div>
                </div>

                 <!--  < end > -->
                <!-- End Only for new records -->

                <div class="main-buttons">
                  <div class="col-xs-12 col-sm-12 button-container no-padding">
                    <%= f.button class: "btn btn-general", data: {disable_with: "<i class='fas fa-spinner fa-spin'></i>"} do %><i class="fas fa-save"></i> <span><%= t("views.form.save") %></span> <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- End Material card -->
      </div>
    </div>
    <!-- End Information -->
  </div>
</section>
<% end %>
<!-- End Form -->

<!-- Form -->
<%= javascript_include_tag "form", "data-turbolinks-track": "reload" %>
<!-- End Form -->

<!-- Jquery Mask -->
<%= javascript_include_tag "jquery-mask/jquery.mask", "data-turbolinks-track": "reload" %>
<!-- End Jquery Mask -->
