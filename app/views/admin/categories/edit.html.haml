-# Form Title
%section.form-title
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-sm-4.col-lg-8
        -# Heading
        %h1{class: "#{@category.state}"}
          %i.fas.fa-edit
          = t("views.edit.edit")
        -# End Heading

      .col-xs-12.col-sm-8.col-lg-4.text-right
        -# Category button
        .btn-container
          = link_to (admin_category_path(@category)), class: "btn btn-general" do
            %i.fas.fa-id-card
            %span= t("activerecord.models.category")
        -# End Category button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_categories_path) do
                %i.fas.fa-list-alt
                %span= t("header.navigation.categories")
            %li
              = link_to (admin_category_path(@category)) do
                %i.fas.fa-id-card
                %span
                  - if I18n.locale == :es
                    = @category.name_spanish

                  - else
                    = @category.name
            %li.active
              %i.fas.fa-edit
              = t("views.edit.edit")
    -# End Breadcrumb
-# End Form Title

-# Render form
= render "form"
-# End Render form
