.row.no-margin
  .col-xs-12.no-padding
    -# Table
    %table.table
      %thead
        - model = "employee"
        - attributes = ["first_name", "last_name", "email" ,"phone", "role", "select"]

        -# Render table header
        = render partial: "partials/table_header", locals: {model: model, attributes: attributes}
      %tbody
        -# Data table render_sync
        = sync partial: "select_employee", collection: @employees
        = sync_new partial: "select_employee", resource: Employee.new
        -# End Data table render_sync
    -# End Table

.row.no-margin
  .col-xs-12.no-padding.text-center
    -# Pagination
    = will_paginate @employees, renderer: BootstrapPagination::Rails, param_name: "employees_page"
    -# End Pagination

-# Auto search script
= javascript_include_tag "auto-search", "data-turbolinks-track": "reload"
-# End Auto search script

-# Pagination with Ajax script
= javascript_include_tag "pagination-ajax", "data-turbolinks-track": "reload"
-# End Pagination with Ajax script

-# Select employee
= javascript_include_tag "select-employee", "data-turbolinks-track": "reload"
-# End Select employee
