-# Form Title
%section.form-title
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-sm-4.col-lg-8
        -# Heading
        %h1{class: "#{@customer.state}"}
          %i.fas.fa-edit
          = t("views.edit.edit")
        -# End Heading

      .col-xs-12.col-sm-8.col-lg-4.text-right
        -# Customer button
        .btn-container
          = link_to (admin_customer_path(@customer)), class: "btn btn-general" do
            %i.fas.fa-id-card
            %span= t("activerecord.models.customer")
        -# End Customer button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_customers_path) do
                %i.fas.fa-list-alt
                %span= t("header.navigation.customers")
            %li
              = link_to (admin_customer_path(@customer)) do
                %i.fas.fa-id-card
                %span
                  = @customer.first_name
                  = @customer.last_name
            %li.active
              %i.fas.fa-edit
              = t("views.edit.edit")
    -# End Breadcrumb
-# End Form Title

-# Render form
= render "form"
-# End Render form
