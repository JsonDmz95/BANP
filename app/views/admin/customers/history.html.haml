-# History
%section.history
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-lg-10
        -# Heading
        %h1.false
          %i.fas.fa-history
          = t("views.history.history")
        -# End Heading

      .col-xs-12.col-lg-2
        -# Customer button
        .btn-container
          = link_to (admin_customer_path(@customer)), class: "btn btn-general" do
            %i.fas.fa-id-card
            %span= t("activerecord.models.customer")
        -# End Customer button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_customers_path) do
                %i.fas.fa-list-alt
                %span= t("header.navigation.customers")
            %li
              = link_to (admin_customer_path(@customer)) do
                %i.fas.fa-id-card
                %span
                  = @customer.first_name
                  = @customer.last_name
            %li.active
              %i.fas.fa-history
              = t("views.history.history")
    -# End Breadcrumb

    -# Render timeline
    - model = Customer
    = render partial: "partials/timeline", locals: {model: model}
    -# End Render timeline
-# End History
