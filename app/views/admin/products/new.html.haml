-# Form Title
%section.form-title
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-lg-10
        -# Heading
        %h1
          %i.fas.fa-plus
          = t("views.new.new")
        -# End Heading

      .col-xs-12.col-lg-2
        -# Products button
        .btn-container
          = link_to (admin_products_path), class: "btn btn-general" do
            %i.fas.fa-list-alt
            %span= t("header.navigation.products")
        -# End Products button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_products_path) do
                %i.fas.fa-list-alt
                %span= t("header.navigation.products")
            %li.active
              %i.fas.fa-plus
              = t("views.new.new")
    -# End Breadcrumb
-# End Form Title

-# Render form
= render "form"
-# End Render form
