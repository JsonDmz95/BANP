-# History
%section.history
  .container
    -# Title
    .row.title-container
      .col-xs-12.col-lg-10
        -# Heading
        %h1.false
          %i.fas.fa-history
          = t("views.history.history")
        -# End Heading

      .col-xs-12.col-lg-2
        -# Product button
        .btn-container
          = link_to (admin_product_path(@product)), class: "btn btn-general" do
            %i.fas.fa-id-card
            %span= t("activerecord.models.product")
        -# End Product button
    -# End Title

    -# Breadcrumb
    .row
      .col-xs-12.hidden-xs
        .breadcrumb-container
          %ol.breadcrumb
            %li
              = link_to (admin_root_path) do
                %i.fas.fa-tachometer-alt
                %span= t("header.navigation.dashboard")
            %li
              = link_to (admin_products_path) do
                %i.fas.fa-list-alt
                %span= t("header.navigation.products")
            %li
              = link_to (admin_product_path(@product)) do
                %i.fas.fa-id-card
                %span
                  - if I18n.locale == :es
                    = @product.name_spanish

                  - else
                    = @product.name
            %li.active
              %i.fas.fa-history
              = t("views.history.history")
    -# End Breadcrumb

    -# Render timeline
    - model = Product
    = render partial: "partials/timeline", locals: {model: model}
    -# End Render timeline
-# End History
