%tr{class: "clickable-row #{customer.state}", "data-href": "#{admin_customer_path(customer)}"}
  -# Set attributes
  - attributes = ["first_name", "last_name", "company", "email" ,"phone"]

  %td
    = link_to admin_customer_path(customer), class: "record-link", "data-header": "No.", "data-toggle": "tooltip", "data-placement": "bottom", title: t("views.index.view_details") do
      %p= customer.id

  - attributes.each do |attribute|
    %td
      = link_to admin_customer_path(customer), class: "record-link", "data-header": t("activerecord.attributes.customer.#{attribute}"), "data-toggle": "tooltip", "data-placement": "bottom", title: t("views.index.view_details") do
        %p= customer["#{attribute}"]
