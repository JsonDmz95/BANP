%li.label
  %span.name
    = customer.first_name
    = customer.last_name
%li
  = link_to orders_path do
    %i.far.fa-newspaper.hidden-xs
    = t("sale.view_orders")
%li
  %a{href: "#", target: "_self"}
    %i.fas.fa-cog.hidden-xs
    = t("header.user.configuration")
%li
  = link_to sign_out_path(email: customer.email), method: "delete" do
    %i.fas.fa-lock.hidden-xs
    = t("header.user.lock")
%li
  = link_to sign_out_path, method: "delete" do
    %i.fas.fa-sign-out-alt.hidden-xs
    = t("header.user.sign_off")
