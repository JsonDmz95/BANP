%tr{class: "#{category.state}"}
  -# Set attributes
  - attributes = I18n.locale == :es ? ["name_spanish", "description_spanish"] : ["name", "description"]

  %td
    %p= category.id

  - attributes.each do |attribute|
    %td
      %p= category["#{attribute}"]

  %td.align-middle
    %p
      = button_tag class: "btn btn-general select-category", "data-id": category.id, "data-name": "#{I18n.locale == :es ? category.name_spanish : category.name}", "data-toggle": "tooltip", "data-placement": "bottom", title: t("views.index.select") do
        %i.fas.fa-check
