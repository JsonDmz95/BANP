  .col-xs-12.hidden-xs
    .breadcrumb-container
      %ol.breadcrumb
        %li
          = link_to (admin_root_path) do
            %i.fas.fa-tachometer-alt
            %span= t("header.navigation.dashboard")
        %li
          = link_to (admin_purchase_orders_path) do
            %i.far.fa-newspaper
            %span= t("purchase.orders")
