%tr{class: "#{employee.state}"}
  -# Set attributes
  - attributes = ["first_name", "last_name", "email" ,"phone", "role"]

  %td
    %p= employee.id

  - attributes.each do |attribute|
    %td
      %p= employee["#{attribute}"]

  %td.align-middle
    %p
      = button_tag class: "btn btn-general select-employee", "data-id": employee.id, "data-name": "#{employee.first_name} #{employee.last_name}", "data-toggle": "tooltip", "data-placement": "bottom", title: t("views.index.select") do
        %i.fas.fa-check
